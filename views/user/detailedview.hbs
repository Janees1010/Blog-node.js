<!doctype html>
<html lang="en">

<head>
    <title>Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <style>
        hr {
            margin: 0.4rem 0;
        }

        body {
            font-family: sans-serif;
        }
    </style>
</head>

<body>

    <main>
        <div style="max-width: 1000px; margin:auto; gap:18px;" class="d-flex flex-column box pt-5">
            {{#each blog}}
            <img src="/images/{{banner}}" alt="" height="500px">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="fw-5">{{title}}</h1>
                    <h6 style="color:#808e8a;">CreatedAt / {{createdAt}}</h6>
                </div>
                {{#if showedit}}
                <div>
                    <a class="btn btn-primary" href="/blog/edit/{{_id}}">Edit</a>
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Delete
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5 " id="exampleModalLabel">{{title}}</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body  text-danger">
                                    Are u Sure u Want to Delete This Blog ?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Close</button>
                                    <a href="/blog/delete/{{_id}}"  class="btn btn-danger">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{else}}
                <h6 style="color:#808e8a;">Written by {{author.name}}</h6>
                {{/if}}
            </div>
            <hr>
            <p>{{description}}</p>
            <p>{{content}}</p> 
            {{/each}}
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
</body>

</html>