<!doctype html>
<html lang="en">

<head>
  <title>Title</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
  <style>
    .blog-post-container {
      width: 100%;
      height: 155px;
      border: 1px sub #E0E0E0;
      border-radius: 5px;
      color: #212121;
    }
    h1 {
      font-weight: 600;
    }
    p {
      font-weight: 400;
    }
    main {
      padding: 40px 80px;
    }
    nav {
      background-color: #333333;
    }
    .dropdown:hover {
      background-color: #007BFF;
    }
    .nav-link {
      color: #6C757D !important;
      font-weight: 500;
    }
    .navbar-brand {
      color: #6C757D !important;
      font-weight: 500;
    }
    body {
      background-color: #F7F7F7;
      font-family: sans-serif;
    }
    a{
      text-decoration: none;
      cursor: pointer;
    }
  </style>
</head>

<body>



  <main>
    {{#each blog}}
    <a href='/blog/post/{{_id}}'>
      <div class="d-flex blog-post-container align-items-center gap-3 justify-content-between">
        <div>
          <h6 style="color:#808e8a;">Written by {{author.name}} / created At  {{createdAt}}</h6>
          <h1>{{title}}</h1>
          <p>{{description}}</p>
        </div>
        <div>
          <img style="border-radius: 10px; padding:10px" src="/images/{{banner}}" alt="" width="190px" height="130px">
        </div>
      </div>
      <hr class="text-dark">
    </a>

    {{/each}}
  </main>






  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"></script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
    integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
    crossorigin="anonymous"></script>
</body>

</html>

</html>