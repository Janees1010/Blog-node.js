<!doctype html>
<html lang="en">
    <head>
        <title>Title</title>
        <!-- Required meta tags -->
        <meta charset="utf-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no"
        />

        <!-- Bootstrap CSS v5.2.1 -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous"
        />
        <style>
            form{
                background-color: #e8ece65c;
                padding: 10px;
            
                overflow-y: scroll;
            }
            main{
                height: 600px;
                padding: 20px;
            }
            textarea{
                border:none;
            }
        </style>
    </head>

    <body>
    
 
            <main style="" class="row align-items-center justify-content-center">
                          {{#each blog}}
			<form action="/blog/editblog/{{_id}}" class="col-5"  method="post" enctype="multipart/form-data">
				<h1 style="text-align: center;">Edit post</h1>
				{{#if err}}
				   <div class="alert alert-danger" role="alert">
                        {{err}}
                    </div>
                {{/if}}
      
                 <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Title</label>
                    <input type="text" class="form-control" name="title" value="{{title}}">
               </div>
               <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Description</label>
                  <textarea style="width: 100%;" name="description" id=""   rows="3" >{{description}}</textarea> 
               </div>
              <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Content</label>
                     <textarea style="width: 100%;"  name="content" id=""  rows="5" >{{content}}</textarea>
             </div>
         
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Banner</label>
                        <input onchange="img_preview(event)" name="image" type="file" class="form-control" name="email">  
                    </div>
                    <div  class="mb-3 justify-item-center">
                      <img  id="image-preview" src="/images/{{banner}}"  alt="" width="250px" height="140px" style="">
                    </div>
               {{/each}}
                
            <button type="submit" class="btn btn-success">Submit</button>
    </form>
  </main>


   
      
 
      

        <script
            src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"
        ></script>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
            integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
            crossorigin="anonymous"
        ></script>
        
    <script>

 function img_preview(e){
            let img = e.target.files[0];
            img = URL.createObjectURL(img);
            console.log(img);
            let img_tag = document.getElementById("image-preview");
            img_tag.src = img;
            img_tag.style.display = "block";
            console.log(img_tag);
        }
    
 </script>
    </body>

</html>
